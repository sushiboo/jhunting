<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textColor="@color/colorPrimary"
            android:text="@string/playerInfoTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View style="@style/Divider"
            android:id="@+id/dvTextView41"
            app:layout_constraintBottom_toBottomOf="@id/textView41"
            app:layout_constraintEnd_toEndOf="@id/textView41"
            android:layout_width="match_parent"/>

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:text="@string/nameTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dvTextView41"/>

        <TextView
            android:id="@+id/tvPlayerInfoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/nameTxt"
            android:textColor="@color/colorGreen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView37"/>

        <TextView
            android:id="@+id/textView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:text="@string/emailTxt"
            app:layout_constraintStart_toEndOf="@id/textView37"
            app:layout_constraintTop_toBottomOf="@id/dvTextView41"/>

        <TextView
            android:id="@+id/tvPlayerInfoEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="100dp"
            android:text="@string/emailTxt"
            android:textColor="@color/colorGreen"
            app:layout_constraintStart_toEndOf="@id/tvPlayerInfoName"
            app:layout_constraintTop_toBottomOf="@id/textView38"/>

        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:text="@string/telephoneTxt"
            app:layout_constraintStart_toEndOf="@id/textView38"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dvTextView41"/>

        <TextView
            android:id="@+id/tvPlayerInfoTelephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="60dp"
            android:text="@string/telephoneTxt"
            android:textColor="@color/colorGreen"
            app:layout_constraintStart_toEndOf="@id/tvPlayerInfoEmail"
            app:layout_constraintTop_toBottomOf="@id/textView39"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:text="@string/expertiseTxt"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPlayerInfoTelephone"
            app:layout_constraintEnd_toStartOf="@id/tvPlayerInfoTelephone"/>

        <ListView
            android:id="@+id/listPlayerInfoExpertise"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/textView40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btnPlayerInfoCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancelTxt"
            android:background="@color/colorGreen"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/listPlayerInfoExpertise"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </android.support.constraint.ConstraintLayout>



</ScrollView>