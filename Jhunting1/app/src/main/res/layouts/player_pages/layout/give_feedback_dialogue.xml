<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:text="@string/giveFeedbackTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View style="@style/Divider"
            android:id="@+id/dvTexView46"
            app:layout_constraintBottom_toBottomOf="@id/textView46"
            app:layout_constraintEnd_toEndOf="@id/textView46"
            android:layout_width="match_parent"/>

        <RadioGroup
            android:id="@+id/rgFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dvTexView46">
            
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goodFeedbackTxt"
                android:id="@+id/rbGoodFeedback"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/satisfactoryFeedbackTxt"
                android:id="@+id/rbSatisfactoryFeedback"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notbadFeedbackTxt"
                android:id="@+id/rbNotBadFeedback"
                />
            
        </RadioGroup>

        <Button
            android:id="@+id/btnGiveFeedback"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/giveFeedbackTxt"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="12dp"
            app:layout_constraintTop_toBottomOf="@id/rgFeedback"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Button
            android:id="@+id/btnCancelFeedback"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/cancelTxt"
            android:background="@color/colorGreen"
            android:textColor="@color/colorWhite"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="12dp"
            app:layout_constraintTop_toBottomOf="@id/rgFeedback"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnGiveFeedback"
            />



    </android.support.constraint.ConstraintLayout>

</ScrollView>
