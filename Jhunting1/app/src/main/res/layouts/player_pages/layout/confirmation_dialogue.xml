<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvConfirmationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:text="@string/jobApplyConfirmTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <Button
            android:id="@+id/btnApplyJobYes"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:text="@string/yesTxt"
            android:background="@color/colorGreen"
            android:textColor="@color/colorWhite"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvConfirmationTitle"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Button
            android:id="@+id/btnApplyJobNo"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/noTxt"
            android:background="@color/colorRed"
            android:textColor="@color/colorWhite"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvConfirmationTitle"
            app:layout_constraintStart_toEndOf="@id/btnApplyJobYes"
            />

    </android.support.constraint.ConstraintLayout>



</ScrollView>