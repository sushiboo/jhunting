<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvJobInfoHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:textColor="@color/colorPrimary"
            android:text="@string/job_info_headerTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View style="@style/Divider"
            android:id="@+id/dvJobInfoHeader"
            app:layout_constraintBottom_toBottomOf="@id/tvJobInfoHeader"
            app:layout_constraintEnd_toEndOf="@id/tvJobInfoHeader"
            android:layout_width="match_parent"/>

        <TextView
            android:id="@+id/tvJobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:text="@string/jobTitleTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dvJobInfoHeader"/>

        <TextView
            android:id="@+id/tvJobInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:text="@string/jobDescritpionTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvJobTitle"/>

        <View style="@style/Divider"
            android:id="@+id/dvJobInfo"
            app:layout_constraintBottom_toBottomOf="@id/tvJobInfo"
            app:layout_constraintEnd_toEndOf="@id/tvJobInfo"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"/>

        <Button
            android:id="@+id/btnJobInfoApply"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:text="@string/applyTxt"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="12dp"
            app:layout_constraintTop_toBottomOf="@id/dvJobInfo"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Button
            android:id="@+id/btnJobInfoCancel"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/cancelTxt"
            android:background="@color/colorGreen"
            android:textColor="@color/colorWhite"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="12dp"
            app:layout_constraintTop_toBottomOf="@id/dvJobInfo"
            app:layout_constraintStart_toEndOf="@id/btnJobInfoApply"
            />

    </android.support.constraint.ConstraintLayout>



</ScrollView>