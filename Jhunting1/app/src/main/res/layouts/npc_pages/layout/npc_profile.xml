<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tvNpcProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:textColor="@color/colorPrimary"
            android:text="@string/nameTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvNpcProfileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emailTxt"
            android:textColor="@color/colorGreen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNpcProfileName"/>

        <TextView
            android:id="@+id/tvNpcProfileTelephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/telephoneTxt"
            android:textColor="@color/colorGreen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNpcProfileEmail"
            />

        <TextView
            android:id="@+id/tvNpcProfileTrustStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/trustworthTxt"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvNpcProfileEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/levelTxt"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNpcProfileTrustStatus"/>

        <TextView
            android:id="@+id/tvNpcProfileTrustLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trustLvlTxt"
            android:textColor="@color/colorGreen"
            app:layout_constraintStart_toEndOf="@id/textView28"
            app:layout_constraintTop_toTopOf="@id/textView28"/>

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:text="@string/pointsTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNpcProfileTrustLevel"/>

        <TextView
            android:id="@+id/tvNpcProfileTrustExp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trustExpTxt"
            android:textColor="@color/colorGreen"
            app:layout_constraintStart_toEndOf="@id/textView29"
            app:layout_constraintTop_toTopOf="@id/textView29"/>

        <View style="@style/Divider"
            android:id="@+id/dvNpcProfileTrustExp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="@id/tvNpcProfileTrustExp"
            app:layout_constraintEnd_toEndOf="@id/tvNpcProfileTrustExp"
            android:layout_width="match_parent"/>

        <Button
            android:id="@+id/btnEditNPC"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/editTxt"
            android:background="@color/colorAccent"
            android:textColor="@color/colorWhite"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="12dp"
            app:layout_constraintTop_toBottomOf="@id/dvNpcProfileTrustExp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    </android.support.constraint.ConstraintLayout>



</ScrollView>